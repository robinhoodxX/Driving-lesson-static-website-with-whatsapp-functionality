# Disable caching for HTML (always load latest)
<FilesMatch "\.(html|htm)$">
  Header set Cache-Control "no-cache, no-store, must-revalidate"
</FilesMatch>

# Cache CSS and JS for 1 year (but allow versioning)
<FilesMatch "\.(css|js)$">
  Header set Cache-Control "max-age=31536000, public"
</FilesMatch>

# Cache images for 1 year (optional)
<FilesMatch "\.(jpg|jpeg|png|gif|svg|webp)$">
  Header set Cache-Control "max-age=31536000, public"
</FilesMatch>
